<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    tools:viewBindingIgnore="true">



    <ImageView
        android:id="@+id/friendProfileImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/group_112"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/friendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="friend_name"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:layout_toEndOf="@id/friendProfileImage"
        android:layout_marginLeft="4dp"/>

    <TextView
        android:id="@+id/lastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="message"
        android:textSize="15dp"
        android:textColor="#9EA3B2"
        android:layout_below="@+id/friendName"
        android:layout_toEndOf="@id/friendProfileImage"
        android:padding="4dp"
        android:layout_marginLeft="4dp"
        android:maxWidth="700dp"/>

    <TextView
        android:id="@+id/lastMessageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:textSize="12sp"
        android:textColor="#9EA3B2"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/lastMessage"
        android:layout_marginRight="8dp" />
</RelativeLayout>
